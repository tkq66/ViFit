<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dtk.vifit.InputFormActivity">

    <EditText
        android:id="@+id/email_regis_form"
        android:inputType="textEmailAddress"
        android:hint="@string/field_hint_email"
        android:ems="10"
        android:layout_gravity="center"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/password_regis_form"
        android:inputType="textPassword"
        android:hint="@string/field_hint_password"
        android:ems="10"
        android:layout_gravity="center"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/age_form"
        android:inputType="number"
        android:hint="@string/field_hint_age"
        android:ems="10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_sex_form"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:context="com.dtk.vifit.InputForm">

        <TextView
            android:id="@+id/sex_label"
            android:text="@string/text_label_sex"
            android:textSize="8pt"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>

        <RadioGroup
            android:id="@+id/sex_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male_radio_btn"
                android:gravity="center"
                android:text="@string/btn_male"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

            <RadioButton
                android:id="@+id/female_radio_btn"
                android:text="@string/btn_female"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_weight_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context="com.dtk.vifit.InputForm">

        <EditText
            android:id="@+id/weight_form"
            android:inputType="numberDecimal"
            android:hint="@string/field_hint_weight"
            android:ems="10"
            android:gravity="center"
            android:layout_width="106dp"
            android:layout_height="match_parent"/>

        <RadioGroup
            android:id="@+id/weight_unit_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/lbs_radio_btn"
                android:text="@string/btn_unit_lbs"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/kg_radio_btn"
                android:text="@string/btn_unit_kg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/done_button"
        android:text="@string/btn_done_regis"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>
